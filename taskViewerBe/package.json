{
  "name": "task-viewer-be",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start:dev": "tsx watch src/server.ts",
    "build": "npm run checks && npm run build:prod",
    "build:prod": "tsc",
    "start:prod": "node dist/server.js",
    "checks": "npm run tsc:ci && npm run eslint:quiet && npm run test",
    "eslint": "eslint \"@(src)/**/*.@(ts|tsx)\" --cache --cache-location \"./.cache/\" --max-warnings 1000",
    "eslint:quiet": "npm run eslint -- --quiet",
    "eslint:fix": "npm run eslint:quiet -- --fix",
    "tsc:ci": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Backend приложение для работы с задачами проекта через файловую систему",
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@fastify/cors": "11.2.0",
    "@types/node": "25.0.10",
    "dotenv": "17.2.3",
    "eslint": "9.39.2",
    "fastify": "5.7.4",
    "fastify-type-provider-zod": "6.1.0",
    "globals": "17.2.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vitest": "3.2.4",
    "zod": "4.3.6"
  }
}
