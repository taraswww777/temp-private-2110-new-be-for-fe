# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app_db

# Storage Configuration
STORAGE_MAX_SIZE_BYTES=1099511627776  # 1TB
